<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <Button
            android:background="@drawable/bg_rounded_rectangle_blue"
            style="@style/MiddleWhiteTextSizeStyle"
            android:text="@string/save"
            android:id="@+id/btn_editing_device_save"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:layout_above="@id/btn_editing_device_save"
            android:id="@+id/rv_editing_device_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layoutManager="LinearLayoutManager" />


</RelativeLayout>